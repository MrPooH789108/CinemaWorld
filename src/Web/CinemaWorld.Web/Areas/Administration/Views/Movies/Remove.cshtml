@model CinemaWorld.Models.ViewModels.Movies.MovieDeleteViewModel
@{
    this.ViewData["Title"] = "Delete Movie";
    this.ViewData["ActivePage"] = MovieNavPages.Movies;
}

<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="Movies" asp-action="Edit" method="post">
            <h4 class="text-danger">Are you sure you want to delete @Model.Name movie?</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="DateOfRelease"></label>
                <input asp-for="DateOfRelease" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" disabled=""></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Resolution"></label>
                <input asp-for="Resolution" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Language"></label>
                <input asp-for="Language" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="CinemaCategory"></label>
                <input asp-for="CinemaCategory" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="TrailerPath"></label>
                <input asp-for="TrailerPath" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="CoverPath"></label>
                <input asp-for="CoverPath" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="IMDBLink"></label>
                <input asp-for="IMDBLink" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Length"></label>
                <input asp-for="Length" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="DirectorName"></label>
                <input asp-for="DirectorName" class="form-control" disabled="" />
            </div>
            <button type="submit" class="btn btn-danger">Delete movie</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}