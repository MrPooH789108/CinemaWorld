@using CinemaWorld.Data.Models.Enumerations
@model CinemaWorld.Models.InputModels.AdministratorInputModels.Movies.MovieCreateInputModel
@{
    this.ViewData["Title"] = "Create Movie";
    this.ViewData["ActivePage"] = MovieNavPages.Movies;
    var directors = this.ViewData["Directors"] as IEnumerable<SelectListItem>;
}

<div class="row justify-content-center">
    <section>
        <form asp-area="Administration" asp-controller="Movies" asp-action="Create" method="post" class="text-center col-md-6">
            <h4>Create new movie</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="DateOfRelease"></label>
                <input asp-for="DateOfRelease" class="form-control col-md-12" />
                <small class="text-primary">* Please select local date and time</small>
            </div>
            <div class="form-group">
                <label asp-for="Resolution"></label>
                <input asp-for="Resolution" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control col-md-12" />
            </div>
            @*<div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control col-md-12" />
            </div>*@
            <div class="form-group">
                <label asp-for="Language"></label>
                <input asp-for="Language" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="CinemaCategory"></label>
                <select class="form-control col-md-12" asp-for="CinemaCategory"
                        asp-items="@(Html.GetEnumSelectList<CinemaCategory>())">
                    <option selected="" disabled="">--Select cinema category--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TrailerPath"></label>
                <input asp-for="TrailerPath" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="CoverPath"></label>
                <input asp-for="CoverPath" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="IMDBLink"></label>
                <input asp-for="IMDBLink" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="Length"></label>
                <input asp-for="Length" class="form-control col-md-12" />
            </div>
            <div class="form-group">
                <label asp-for="DirectorId"></label>
                <select asp-for="DirectorId" asp-items="directors" class="form-control col-md-12">
                    <option selected="" disabled="">--Select director--</option>
                </select>
            </div>
            <button type="submit" class="btn btn-outline-success">Create movie</button>
        </form>
    </section>
</div>
